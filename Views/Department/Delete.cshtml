@model PruebaTecnicaPresidencia.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Delete Department</h1>

<h3>Are you sure you want to delete this department?</h3>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Manager)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Manager)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Budget)</dt>
            <dd class="col-sm-9">@Model.Budget.ToString("C")</dd>

            <dt class="col-sm-3">Employee Count</dt>
            <dd class="col-sm-9">@Model.Employees.Count</dd>
        </dl>

        @if (Model.Employees.Any())
        {
            <div class="alert alert-warning">
                <strong>Warning!</strong> This department has @Model.Employees.Count employees. Deleting it may affect these employees.
            </div>
        }

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
